{
  "name": "@orrange/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/server.ts",
    "dev:clean": "tsx watch src/clean-server.ts",
    "dev:database": "tsx watch src/database-server.ts",
    "dev:p2p": "tsx watch src/p2p-server-fastify.ts",
    "start": "node dist/server.js",
    "start:database": "node dist/database-server.js",
    "start:p2p": "node dist/p2p-server-fastify.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest --testPathPattern=security",
    "test:escrow": "jest --testPathPattern=escrow",
    "test:contract": "jest --testPathPattern=contract",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "db:setup": "tsx src/database/setup.ts setup",
    "db:health": "tsx src/database/setup.ts health",
    "db:seed": "tsx src/database/setup.ts seed",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push"
  },
  "dependencies": {
    "@bull-board/api": "^5.10.2",
    "@bull-board/fastify": "^5.10.2",
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^10.0.0",
    "@orrange/auth": "workspace:*",
    "@orrange/chains": "workspace:*",
    "@orrange/shared": "workspace:*",
    "@orrange/validation": "workspace:*",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "commander": "^11.1.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "fastify": "^4.25.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.7",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.7.1",
    "twilio": "^4.19.3",
    "winston": "^3.11.0",
    "ws": "^8.15.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/ws": "^8.5.10",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
