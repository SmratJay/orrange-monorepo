# API Service Environment Configuration

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/orrange_p2p?schema=public"

# Redis (for caching and real-time data)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-change-in-production"
JWT_EXPIRES_IN="24h"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="7d"

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_ORDERS_PER_MINUTE=10

# Trading Configuration
MAX_ORDER_SIZE_USD=10000
MAX_DAILY_VOLUME_USD=100000
MAX_OPEN_ORDERS_PER_USER=50
MIN_ORDER_SIZE_USD=10

# Security
CORS_ORIGIN="http://localhost:3001,http://localhost:3000"
HELMET_ENABLED=true

# WebSocket
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# External APIs
COINGECKO_API_KEY=""
CHAINLINK_PRICE_FEEDS=true

# File Upload (for KYC documents)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"
UPLOAD_DIR="./uploads"

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="debug"
