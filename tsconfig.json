{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@orrange/shared": ["./packages/shared/src"],
      "@orrange/auth": ["./packages/auth/src"],
      "@orrange/ui": ["./packages/ui/src"],
      "@orrange/validation": ["./packages/validation/src"],
      "@orrange/chains": ["./packages/chains/src"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build"
  ],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/shared" },
    { "path": "./packages/auth" },
    { "path": "./packages/ui" },
    { "path": "./packages/validation" },
    { "path": "./packages/chains" },
    { "path": "./services/api" }
  ]
}